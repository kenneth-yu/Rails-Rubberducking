<% if flash[:error] != nil%>
<% flash[:error].each do |error| %>
<%= error %> <br/>
<% end %>
<% end %>

<h2>Add a New Duck</h2>
<%= form_for @duck do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.collection_select :student_id, @students, :id, :name %>
<%= f.submit "Submit Duck" %>
<% end %>
