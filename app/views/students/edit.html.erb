<% if flash[:error] != nil%>
<% flash[:error].each do |error| %>
<%= error %> <br/>
<% end %>
<% end %>

<h2>Edit Student Details</h2>
<%= form_for @student do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :mod %>
<%= f.text_field :mod %>
<%= f.submit "Submit Student" %>
<% end %>
